// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Link {
  id                     Int         @id @default(autoincrement())
  url                    String      @db.Text
  alias                  String      @unique
  createdAt              DateTime    @default(now())
  linkVisits             LinkVisit[]
  disableLinkAfterClicks Int?
  disableLinkAfterDate   DateTime?
  disabled               Boolean     @default(false)

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@index([userId])
}

model User {
  id           String        @id @unique
  name         String
  email        String        @unique
  createdAt    DateTime      @default(now())
  imageUrl     String?
  links        Link[]
  dynamicLinks DynamicLink[]
}

model LinkVisit {
  // Number of clicks will be the number of rows in this table
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  linkId    Int
  link      Link     @relation(fields: [linkId], references: [id])
  device    String
  browser   String
  os        String
  model     String   @default("")
  country   String
  city      String

  @@index([linkId])
}

model DynamicLink {
  id                       Int      @id @default(autoincrement())
  subdomain                String   @unique
  createdAt                DateTime @default(now())
  playStoreUrl             String
  appStoreUrl              String
  iosTeamId                String
  iosBundleId              String
  androidPackageName       String
  androidSha256Fingerprint String
  fallbackUrl              String
  title                    String
  description              String
  imageUrl                 String
  userId                   String
  user                     User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
